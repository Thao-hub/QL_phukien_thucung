@model IEnumerable<QL_phukien.Models.KhachHang>

@{
    ViewBag.Title = "Khách Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content -->
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Khách hàng</span></h4>
    <div class="card">
        <div class="card-header demo-inline-spacing">
            <div class="row">
                <div class="col-sm-9">
                    <div class="input-group">
                        <span class="input-group-text"><i class="tf-icons bx bx-search"></i></span>
                        <input type="text" class="form-control" placeholder="Tìm kiếm..." />
                    </div>
                </div>
                <div class="col-sm-3">
                    <button type="button" class="btn btn-primary" data-bs-toggle="offcanvas"
                            data-bs-target="#offcanvasBoth" aria-controls="offcanvasBoth">
                        <span class="tf-icons bx bx-plus"></span>&nbsp; Tạo Khách Hàng
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row gy-3">
                <div class="table-responsive text-nowrap">
                    <table class="table">
                        <thead>
                            <tr class="text-nowrap">
                                <th scope="col">
                                    <div class="form-check d-flex justify-content-center">
                                        <input class="form-check-input" type="checkbox" id="defaultCheck6" />
                                    </div>
                                </th>
                                <th scope="col">Tên</th>
                                <th scope="col">Số Điện Thoại</th>
                                <th scope="col">Số Liên Hệ</th>
                                <th scope="col">Địa Chỉ</th>
                                <th scope="col">Giới Tính</th>
                                <th scope="col" class="text-center">Hành Động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        <div class="form-check d-flex justify-content-center">
                                            <input class="form-check-input" type="checkbox" />
                                        </div>
                                    </th>
                                    <td>@item.Ten</td>
                                    <td>@item.SoLienHe</td>
                                    <td>@item.Email</td>
                                    <td>@item.DiaChi</td>
                                    <td>@item.GioiTinh</td>
                                    <td>
                                        <div class="d-flex justify-content-center align-items-center gap-2">
                                            <button type="button"
                                                    class="btn btn-icon btn-outline-secondary">
                                                <i class="bx bx-pencil"></i>
                                            </button><button type="button" class="btn btn-icon btn-outline-danger">
                                                <i class="bx bx-trash-alt"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!--/ Responsive Table -->
                <!-- Enable Scrolling & Backdrop Offcanvas -->
                <div class="col-lg-6 col-md-6">
                    <div class="mt-3">
                        <div class="offcanvas offcanvas-end w-50" data-bs-scroll="true" tabindex="-1" id="offcanvasBoth"
                             aria-labelledby="offcanvasBothLabel">
                            <div class="offcanvas-header">
                                <h5 id="offcanvasBothLabel" class="offcanvas-title">Tạo Khách Hàng</h5>
                                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                                        aria-label="Close"></button>
                            </div>
                            <div class="offcanvas-body">
                                <div class="card mb-4">

                                    <!-- Account -->


                                </div>
                                <div class="offcanvas-body mx-0 flex-grow-0">
                                    <div class="card mb-4">
                                        <div class="card-body">
                                            <form id="themSamPham" method="POST" onsubmit="return false">
                                                <div class="row">
                                                    <div class="mb-3 col-md-6">
                                                        <label for="ten" class="form-label">Tên Khách Hàng</label>
                                                        <input class="form-control" type="text" id="ten" name="ten"
                                                               value="Phạm Ngọc Mai" autofocus required />
                                                    </div>
                                                    <div class="mb-3 col-md-6">
                                                        <label class="form-label" for="basic-default-phone">Số điện thoại</label>
                                                        <input type="text"
                                                               id="basic-default-phone"
                                                               class="form-control phone-mask"
                                                               placeholder="+ 0343344556" />
                                                    </div>



                                                    <div class="mb-3 col-md-6">
                                                        <label for="currency" class="form-label d-block">Giới tính</label>
                                                        <div class="form-check form-check-inline mt-3">
                                                            <input class="form-check-input"
                                                                   type="radio"
                                                                   name="inlineRadioOptions"
                                                                   id="inlineRadio1"
                                                                   value="Nam" />
                                                            <label class="form-check-label" for="inlineRadio1">Nam</label>
                                                        </div>
                                                        <div class="form-check form-check-inline">
                                                            <input class="form-check-input"
                                                                   type="radio"
                                                                   name="inlineRadioOptions"
                                                                   id="inlineRadio2"
                                                                   value="Nữ" />
                                                            <label class="form-check-label" for="inlineRadio2">Nữ</label>
                                                        </div>
                                                        <div class="form-check form-check-inline">
                                                            <input class="form-check-input"
                                                                   type="radio"
                                                                   name="inlineRadioOptions"
                                                                   id="inlineRadio3"
                                                                   value="Khác" />
                                                            <label class="form-check-label" for="inlineRadio3">Khác</label>
                                                        </div>
                                                    </div>

                                                    <div class="mb-3 col-md-12">
                                                        <label for="address" class="form-label">Địa chỉ</label>
                                                        <textarea id="address"
                                                                  class="form-control"
                                                                  placeholder="Việt Nam ..."
                                                                  rows="3"></textarea>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                    <div class="mt-2">
                                        <button type="submit" class="btn btn-primary me-2">
                                            <span class="tf-icons bx bx-save"></span>&nbsp; Lưu
                                        </button>
                                        <button type="reset" class="btn btn-outline-secondary"
                                                data-bs-dismiss="offcanvas">
                                            Thoát
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>        
