@model IEnumerable<QL_phukien.Models.DonVi>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content -->
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Sản phẩm / </span>Đơn vị</h4>
    <div class="card">
        <div class="card-header demo-inline-spacing">
            <div class="row">
                <div class="col-sm-9">
                    <div class="input-group">
                        <span class="input-group-text"><i class="tf-icons bx bx-search"></i></span>
                        <input type="text" class="form-control" placeholder="Tìm kiếm..." />
                    </div>
                </div>
                <div class="col-sm-3">
                    <button type="button" class="btn btn-primary" data-bs-toggle="offcanvas"
                            data-bs-target="#offcanvasBoth" aria-controls="offcanvasBoth">
                        <span class="tf-icons bx bx-plus"></span>&nbsp; Tạo Đơn Vị
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row gy-3">
                <div class="table-responsive text-nowrap">
                    <table class="table">
                        <thead>
                            <tr class="text-nowrap">
                                <th scope="col">
                                    <div class="form-check d-flex justify-content-center">
                                        <input class="form-check-input" type="checkbox" id="defaultCheck6" />
                                    </div>
                                </th>
                                <th scope="col">Số Thứ Tự</th>
                                <th scope="col">Tên Đơn Vị</th>
                                <th scope="col">Cập Nhật Lúc</th>
                                <th scope="col">Trạng Thái</th>
                                <th scope="col">Hành Động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        <div class="form-check d-flex justify-content-center">
                                            <input class="form-check-input" type="checkbox" id="defaultCheck6" />
                                        </div>
                                    </th>

                                    <td>@item.SoThuTu</td>
                                    <td>@item.Ten</td>
                                    <td>@item.CapNhatLuc</td>
                                    <td class="text-center">
                                        <div class="form-check form-switch d-flex justify-content-center">
                                            <input aria-checked="false" class="form-check-input float-end" type="checkbox"
                                                   checked />
                                        </div>
                                    </td>
                                   
                                    <td class="text-start">
                                        <div class="d-inline-flex align-items-center gap-2">
                                            <button type="button"
                                                    class="btn btn-icon btn-outline-secondary">
                                                <i class="bx bx-pencil"></i>
                                            </button><button type="button" class="btn btn-icon btn-outline-danger">
                                                <i class="bx bx-trash-alt"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!--/ Responsive Table -->
                <!-- Enable Scrolling & Backdrop Offcanvas -->
                <div class="col-lg-6 col-md-6">
                    <div class="mt-3">
                        <div class="offcanvas offcanvas-end" data-bs-scroll="true" tabindex="-1" id="offcanvasBoth"
                             aria-labelledby="offcanvasBothLabel">
                            <div class="offcanvas-header">
                                <h5 id="Tạo Đơn Vị" class="offcanvas-title">Tạo Đơn Vị</h5>
                                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                                        aria-label="Close"></button>
                            </div>
                            <div class="offcanvas-body mx-0 flex-grow-0">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <form id="themSamPham" method="POST" onsubmit="return false">
                                            <div class="row">
                                                <div class="mb-3 col-md-12">
                                                    <label for="tenDV" class="form-label">Tên Đơn Vị</label>
                                                    <input class="form-control" type="text" id="tenDV" name="tenDV" placeholder="Tìm kiếm..."
                                                           autofocus required />
                                                </div>
                                                <div class="mb-3 col-md-12">
                                                    <div class="form-check form-switch mb-2">
                                                        <input class="form-check-input" type="checkbox" id="trangThaiDanhMuc" checked />
                                                        <label class="form-check-label" for="flexSwitchCheckChecked">Trạng Thái</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <!-- /Account -->
                                </div>

                                <div class="mt-2">
                                    <button type="submit" class="btn btn-primary me-2"><span class="tf-icons bx bx-save"></span>&nbsp; Lưu</button>
                                    <button type="reset" class="btn btn-outline-secondary" data-bs-dismiss="offcanvas">Thoát</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>